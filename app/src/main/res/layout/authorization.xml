<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#002429">

    <TextView
        android:id="@+id/Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/enter2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00BCD4"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/number_of_attempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/user_text"
        android:visibility="invisible"
        android:layout_alignEnd="@+id/user_text"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/user_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Login"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="73dp"
        android:background="#003C0104"
        android:text="@string/login"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#00BCD4"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_text"
        android:layout_alignStart="@+id/user_text"
        android:layout_alignLeft="@+id/user_text"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="39dp"
        android:text="@string/password"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#00BCD4"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_user_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_text"
        android:layout_marginStart="143dp"
        android:layout_marginLeft="143dp"
        android:layout_marginBottom="-2dp"
        android:layout_toEndOf="@+id/user_text"
        android:layout_toRightOf="@+id/user_text"
        android:autofillHints="username"
        android:hint="@string/login_text"
        android:inputType="textImeMultiLine"
        android:textColor="#00BCD4"
        android:textColorHint="@color/white"
        android:textSize="20sp">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edit_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_user_text"
        android:layout_alignBottom="@+id/password_text"
        android:layout_marginStart="207dp"
        android:layout_marginLeft="-73dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="-1dp"
        android:autofillHints="password"
        android:hint="@string/password_text"
        android:inputType="textPassword"
        android:textColor="#00BCD4"
        android:textColorHint="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="338dp"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        android:text="@string/enter"
        android:textColor="#00BCD4"
        android:textSize="24sp" />

</RelativeLayout>